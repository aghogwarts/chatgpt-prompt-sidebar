{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Sidebar",
  "version": "2.0.1",
  "description": "Prompt sidebar inside ChatGPT",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "prompt-sidebar@local",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
